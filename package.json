{
    "name": "dotnet-tools",
    "displayName": ".NET Tools",
    "publisher": "kineticSnippet",
    "description": "Dotnet tools for dotnet developers",
    "version": "0.1.1",
    "keywords": [
        "C#",
        "dotnet"
    ],
    "icon": "Resources/Icons/Thunder.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/kineticSnippet/dotnetShield"
    },
    "license": "private",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "workspaceContains:**/*.{csproj,fsproj,cs,fs,sln}",
        "onLanguage:csharp",
        "onLanguage:fsharp"
    ],
    "author": {
        "name": "Fercho",
        "email": "kineticSnippet@outlook.com",
        "url": "https://github.com/kineticSnippet"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "dotnet-tools.manageReferences",
                "title": "Manage References",
                "category": "Dotnet Tools"
            },
            {
                "command": "dotnet-tools.buildProject",
                "category": "Dotnet Tools",
                "title": "Build Project"
            },
            {
                "command": "dotnet-tools.runProject",
                "category": "Dotnet Tools",
                "title": "Run Project"
            },
            {
                "command": "dotnet-tools.watchAndRunProject",
                "category": "Dotnet Tools",
                "title": "Watch Run Project"
            },
            {
                "command": "dotnet-tools.restoreProject",
                "category": "Dotnet Tools",
                "title": "Restore Project"
            },
            {
                "command": "dotnet-tools.openProject",
                "category": "Dotnet Tools",
                "title": "Open Project"
            },
            {
                "command": "dotnet-tools.refreshDotnetTreeView",
                "category": "Dotnet Tools",
                "title": "Refresh Nuget Packages",
                "icon": {
                    "light": "resources/light/refresh.png",
                    "dark": "resources/dark/refresh.png"
                }
            },
            {
                "command": "dotnet-tools.addNugetPackage",
                "category": "Dotnet Tools",
                "title": "Add Nuget Package"
            },
            {
                "command": "dotnet-tools.removeNugetPackage",
                "category": "Dotnet Tools",
                "title": "Remove Nuget Package"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "submenu": "dotnet-tools",
                    "group": ".dotnet-tools",
                    "when": "resourceExtname == .csproj || resourceExtname == .fsproj"
                }
            ],
            "editor/context": [
                {
                    "submenu": "dotnet-tools",
                    "group": ".dotnet-tools",
                    "when": "resourceExtname == .csproj || resourceExtname == .fsproj"
                }
            ],
            "view/item/context": [
                {
                    "command": "dotnet-tools.addNugetPackage",
                    "group": "nugetPackages",
                    "when": "view == dotnet-tools.dotnetProjects && viewItem == nugetStack || viewItem == dotnetProject"
                },
                {
                    "command": "dotnet-tools.removeNugetPackage",
                    "group": "nugetPackages",
                    "when": "view == dotnet-tools.dotnetProjects && viewItem == nugetPackage || viewItem == nugetStack || viewItem == dotnetProject"
                },
                {
                    "command": "dotnet-tools.manageReferences",
                    "when": "view == dotnet-tools.dotnetProjects && viewItem == dotnetProject || viewItem == projectStack",
                    "group": "references"
                },
                {
                    "command": "dotnet-tools.buildProject",
                    "when": "view == dotnet-tools.dotnetProjects && viewItem == dotnetProject",
                    "group": "build actions"
                },
                {
                    "command": "dotnet-tools.runProject",
                    "when": "view == dotnet-tools.dotnetProjects && viewItem == dotnetProject",
                    "group": "build actions"
                },
                {
                    "command": "dotnet-tools.watchAndRunProject",
                    "when": "view == dotnet-tools.dotnetProjects && viewItem == dotnetProject",
                    "group": "build actions"
                },
                {
                    "command": "dotnet-tools.openProject",
                    "when": "view == dotnet-tools.dotnetProjects && viewItem == dotnetProject",
                    "group": "other actions"
                }
            ],
            "dotnet-tools": [
                {
                    "command": "dotnet-tools.manageReferences",
                    "group": "references"
                },
                {
                    "command": "dotnet-tools.buildProject",
                    "group": "build actions"
                },
                {
                    "command": "dotnet-tools.runProject",
                    "group": "build actions"
                },
                {
                    "command": "dotnet-tools.watchAndRunProject",
                    "group": "build actions"
                },
                {
                    "command": "dotnet-tools.restoreProject",
                    "group": "build actions"
                }
            ],
            "view/title": [
                {
                    "command": "dotnet-tools.refreshDotnetTreeView",
                    "when": "view == dotnet-tools.dotnetProjects",
                    "group": "navigation"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "dotnet-tools.dotnetProjects",
                "contents": "Welcome to the Nuget Packages View!\nNo C# or F# project was found in the workspace.\n\nTo get started, open a folder or workspace that contains a C# or F# project. Or create a new one.\n[Open Folder](command:workbench.action.files.openFolder) \n "
            }
        ],
        "submenus": [
            {
                "id": "dotnet-tools",
                "label": "Dotnet Tools"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "dotnet-tools",
                    "title": "Dotnet Tools",
                    "icon": "Resources/Icons/thunder.png"
                }
            ]
        },
        "views": {
            "dotnet-tools": [
                {
                    "id": "dotnet-tools.dotnetProjects",
                    "name": "Dotnet Projects"
                },
                {
                    "id": "dotnet-tools.nodeDependencies",
                    "name": "Node Dependencies"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "axios": "^1.4.0"
    }
}
